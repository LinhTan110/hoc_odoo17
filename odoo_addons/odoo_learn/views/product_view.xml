<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        # hien o ngoai
        <record id="product_view_tree" model="ir.ui.view">
            <field name="name">product_view_tree</field>
            <field name="model">learn.product</field>
            <field name="arch" type="xml">
                <tree string="product_tree">
                    <field name="name"/>
                    <field name="price"/>
                    <field name="cost" groups="odoo_learn.group_employee_manager"/>
                </tree>
            </field>
        </record>
        # trong cho tao moi
        <record id="product_view_form" model="ir.ui.view">
            <field name="name">product_view_form</field>
            <field name="model">learn.product</field>
            <field name="arch" type="xml">
                <form string="product_form">
                    <sheet>
                        <div class="oe_title">
                            <lable for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="title"/>
                            </h1>
                        </div>

                        <group>
                            <field name="price"/>
                            <field name="cost"/>
                        </group>

                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_action" model="ir.actions.act_window">
            <field name="name">List Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">learn.product</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="product_root_menu_id" name="Products" sequence="2"/>
        <menuitem id="product_menu_id" name="Product" parent="odoo_learn.product_root_menu_id" action="product_action" sequence="1"/>
    </data>
</odoo>
